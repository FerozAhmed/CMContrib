<UserControl x:Class="Caliburn.Micro.Contrib.Demo.Views.CoreDemoView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:Controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Toolkit"
             xmlns:Controls1="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Input.Toolkit"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:Micro="clr-namespace:Caliburn.Micro;assembly=Caliburn.Micro">
    <StackPanel>
        <Button MinWidth="{StaticResource ButtonMinWidth}"
                Margin="{StaticResource ButtonMargin}"
                HorizontalAlignment="{StaticResource ButtonHAlignment}"
                Content="Busy"
                Micro:Message.Attach="Busy(BusyDuration.Value)" />
        <Button MinWidth="{StaticResource ButtonMinWidth}"
                Margin="{StaticResource ButtonMargin}"
                HorizontalAlignment="{StaticResource ButtonHAlignment}"
                Content="Busy w/ Attribute"
                Micro:Message.Attach="BusyWithAttribute(BusyDuration.Value)" />
        <Controls:DockPanel Margin="0 -3 0 5" HorizontalAlignment="Left">
            <TextBlock Margin="3"
                       VerticalAlignment="Center"
                       Text="ms:" />
            <Controls1:NumericUpDown x:Name="BusyDuration"
                                     Width="70"
                                     Margin="3"
                                     VerticalAlignment="Center"
                                     Controls:DockPanel.Dock="Right"
                                     Increment="250"
                                     Maximum="10000"
                                     Minimum="2000"
                                     Value="5000" />
        </Controls:DockPanel>
        <Button MinWidth="{StaticResource ButtonMinWidth}"
                Margin="{StaticResource ButtonMargin}"
                HorizontalAlignment="{StaticResource ButtonHAlignment}"
                Content="Catch"
                Micro:Message.Attach="Catch" />
        <Button MinWidth="{StaticResource ButtonMinWidth}"
                Margin="{StaticResource ButtonMargin}"
                HorizontalAlignment="{StaticResource ButtonHAlignment}"
                Content="Rescue"
                Micro:Message.Attach="Rescue" />
        <Button MinWidth="{StaticResource ButtonMinWidth}"
                Margin="{StaticResource ButtonMargin}"
                HorizontalAlignment="{StaticResource ButtonHAlignment}"
                Content="Cancel"
                Micro:Message.Attach="Cancel" />
    </StackPanel>
</UserControl>
